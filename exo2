--Création des tables
CREATE TABLE PIECE(
    NOP NUMBER(15),
    DESIGNATION VARCHAR2(20),
    COULEUR VARCHAR2(20),
    POIDS NUMBER(20)
);
CREATE TABLE SERVICE(
    NOS NUMBER(15),
    INTITULE VARCHAR2(20),
    LOCALISATION VARCHAR2(20)
);
CREATE TABLE ORDRE(
    NOP NUMBER(15),
    NOS NUMBER(15),
    QUANTITE NUMBER(20)
);
CREATE TABLE NOMENCLATURE(
    NOPA NUMBER(15),
    NOPC NUMBER(15),
    QUANTITE NUMBER(20)
);
--Contraintes d’intégrité
--1
INSERT INTO PIECE VALUES(10,NULL,'VERT',150);
INSERT INTO PIECE VALUES(10,NULL,'BLEUE',140);
--2
INSERT INTO SERVICE VALUES(20,NULL,'new_york');
INSERT INTO SERVICE VALUES(20,NULL,'chicago');